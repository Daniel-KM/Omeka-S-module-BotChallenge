            max-width: 480px;
            text-align: center;
        }

        h1 {
            font-size: 20px;
            line-height: 24px;
            color: #404E61;
            margin-bottom: 12px;
        }

        .spinner {
            width: 40px;
            height: 40px;
            margin: 0 auto 24px;
            border: 4px solid #dfdfdf;
            border-top-color: #404E61;
