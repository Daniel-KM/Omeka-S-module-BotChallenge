<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE phpunit>
<phpunit
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="http://schema.phpunit.de/9.5/phpunit.xsd"
    colors="true"
    backupGlobals="false"
    bootstrap="./tests/bootstrap.php"
    >
    <testsuites>
        <!-- Unit tests that don't need Application (fast) -->
        <testsuite name="unit">
            <file>tests/BotChallengeTest/Mvc/IpInCidrTest.php</file>
            <file>tests/BotChallengeTest/Mvc/GetClientIpTest.php</file>
            <file>tests/BotChallengeTest/Mvc/TokenTest.php</file>
        </testsuite>
        <!-- Controller tests (HTTP dispatch) -->
        <testsuite name="controller">
            <directory suffix="Test.php">tests/BotChallengeTest/Controller</directory>
        </testsuite>
    </testsuites>
    <php>
        <env name="APPLICATION_ENV" value="testing"/>
        <includePath>./tests</includePath>
    </php>
</phpunit>
